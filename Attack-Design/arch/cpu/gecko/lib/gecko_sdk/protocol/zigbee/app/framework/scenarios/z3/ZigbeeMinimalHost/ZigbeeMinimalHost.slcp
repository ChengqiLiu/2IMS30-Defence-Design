project_name: "ZigbeeMinimalHost"
label: "Zigbee - Host ZigbeeMinimalHost"
package: "Zigbee"
category: "Zigbee Application"
quality: "production"

description: >
  This is a minimal Zigbee 3.0 gateway application for a Unix host, providing
  only network-layer functionality and requiring the addition of application-layer 
  functionality.
author: "Silicon Laboratories, Inc."

component:
  - id: "cli"
    instance:
    - example
  - id: "zigbee_basic"
  - id: "native"
  - id: "iostream_stdio"
  - id: "zigbee_address_table"
  - id: "zigbee_concentrator"
  - id: "zigbee_counters"
  - id: "zigbee_ezmode_commissioning"
  - id: "zigbee_ezsp"
  - id: "zigbee_ezsp_uart"
  - id: "zigbee_ncp_configuration"
  - id: "zigbee_network_creator"
  - id: "zigbee_network_creator_security"
  - id: "zigbee_network_steering"
  - id: "zigbee_scan_dispatch"
  - id: "zigbee_stack_diagnostics"
  - id: "zigbee_trust_center_nwk_key_update_broadcast"
  - id: "zigbee_trust_center_nwk_key_update_periodic"
  - id: "zigbee_update_tc_link_key"
  - id: "zigbee_file_descriptor_dispatch"
  - id: "zigbee_reporting"
  - id: "zigbee_debug_print"
source:
  - path: "main.c"

config_file:
  - path: "config/zcl/zcl_config.zap"
    file_id: zap_configuration_file_id
    directory: "zcl"

include:
  - path: "./"

configuration:
  - name: SL_BOARD_ENABLE_VCOM
    value: 1
  - name: SL_IOSTREAM_USART_VCOM_FLOW_CONTROL_TYPE
    value: usartHwFlowControlCtsAndRts
  - name: SL_CLI_MAX_INPUT_ARGUMENTS
    value: 16
  - name: EMBER_AF_PLUGIN_CONCENTRATOR_MIN_TIME_BETWEEN_BROADCASTS_SECONDS
    value: 5
  - name: EMBER_AF_PLUGIN_CONCENTRATOR_DELIVERY_FAILURE_THRESHOLD
    value: 3
  - name: EMBER_SOURCE_ROUTE_TABLE_SIZE
    value: 100
  - name: EMBER_KEY_TABLE_SIZE
    value: 4
  - name: EMBER_MAX_END_DEVICE_CHILDREN
    value: 32  
  - name: EMBER_BINDING_TABLE_SIZE
    value: 16  
  - name: EMBER_MAX_ENEMBER_AF_PLUGIN_REPORTING_TABLE_SIZED_DEVICE_CHILDREN
    value: 10  
  - name: EMBER_AF_PLUGIN_NETWORK_FIND_RADIO_TX_CALLBACK
    value: 0  
  - name: EMBER_AF_PLUGIN_NETWORK_CREATOR_RADIO_POWER
    value: -2  
  - name: EMBER_AF_PLUGIN_NETWORK_CREATOR_SECURITY_NETWORK_OPEN_TIME_S
    value: 180 

readme:
  - path: ./readme.html

ui_hints:
  highlight:
    - path: readme.html
      focus: false

filter:
  - name: "Wireless Technology"
    value: ["Zigbee"]
  - name: "Device Type"
    value: ["Host"]
  - name: "Project Difficulty"
    value: ["Advanced"]