#ifndef SL_ZIGBEE_COMMON_CALLBACK_DISPATCHER_H
#define SL_ZIGBEE_COMMON_CALLBACK_DISPATCHER_H

#include PLATFORM_HEADER
#include "stack/include/ember.h"

{# EVENT INIT -#}
// Event Init
void emAfEventInit(void);
{% for cb in zigbee_af_callback -%}
{% if cb['callback_type'] == "event_init" or cb['callback_type'] == "init" -%}
void {{ cb['function_name'] }}(uint8_t init_level);
{% endif -%}
{% endfor -%}

{# LOCAL DATA INIT -#}
// Local data Init
void emAfLocalDataInit(void);
{% for cb in zigbee_af_callback -%}
{% if cb['callback_type'] == "local_data_init" -%}
void {{ cb['function_name'] }}(uint8_t init_level);
{% endif -%}
{% endfor -%}

{# INIT DONE -#}
// Init done
void emAfInitDone(void);
{% for cb in zigbee_af_callback -%}
{% if cb['callback_type'] == "init_done" -%}
void {{ cb['function_name'] }}(uint8_t init_level);
{% endif -%}
{% endfor -%}

{# TICK #}
// Tick
void emAfTick(void);
{% for cb in zigbee_af_callback -%}
{% if cb['callback_type'] == "tick" -%}
void {{ cb['function_name'] }}(void);
{% endif -%}
{% endfor %}
#endif // SL_ZIGBEE_COMMON_CALLBACK_DISPATCHER_H