    condition: ["device_sdid_89"]
  - name: SL_DEVICE_INIT_LFXO_TIMEOUT
    value: cmuLfxoStartupDelay_4KCycles
    condition: ["device_sdid_200"]
  - name: SL_DEVICE_INIT_LFXO_TIMEOUT
    value: cmuLfxoStartupDelay_4KCycles
    condition: ["device_sdid_205"]
