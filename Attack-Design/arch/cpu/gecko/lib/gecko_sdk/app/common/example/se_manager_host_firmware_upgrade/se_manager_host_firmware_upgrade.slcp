project_name: se_manager_host_firmware_upgrade
package: platform
quality: production
label: Platform - SE Manager Host Firmware Upgrade and Debug Lock
description: >
  This example project demonstrates the host firmware upgrade and debug lock API of SE Manager.
category: Example|Platform
filter:
  - name: "Device Type"
    value: ["SoC"]
  - name: "MCU"
    value: ["32-bit MCU"]
  - name: "Project Difficulty"
    value: ["Advanced"]
source:
  - path: main.c
  - path: app_init.c
  - path: app_process.c
  - path: app_host_firmware_image.c
  - path: app_se_manager_host_firmware_upgrade.c
include:
  - path: .
    file_list:
    - path: app_init.h
    - path: app_process.h
    - path: app_se_manager_macro.h
    - path: app_host_firmware_image.h
    - path: app_se_manager_host_firmware_upgrade.h
readme:
  - path: readme.md
ui_hints:
  highlight:
    - path: readme.md
      focus: true
component:
  - id: sl_string
  - id: status_string
  - id: se_manager
  - id: sl_system
  - id: device_init
  - id: device_init_hfrco
  - id: printf
  - id: iostream_retarget_stdio
  - id: iostream_recommended_stream
configuration:
  - name: SL_STATUS_STRING_ENABLE_BLUETOOTH
    value: 0
  - name: SL_STATUS_STRING_ENABLE_WIFI
    value: 0
  - name: SL_DEVICE_INIT_HFRCO_BAND
    value: cmuHFRCODPLLFreq_38M0Hz
  - name: SL_BOARD_ENABLE_VCOM
    value: 1
define:
  - name: DEBUG_EFM
  - name: SE_MANAGER_PRINT
toolchain_settings:
  - option: optimize
    value: debug
