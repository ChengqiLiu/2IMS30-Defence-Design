project_name: spidrv_master_baremetal
package: platform
quality: production
label: Platform - SPIDRV Master Bare-metal 
description: > 
  This example project demonstrates how to use the master mode of the Serial Peripheral Interface driver in a bare-metal configuration.
category: Example|Platform
filter:
  - name: "Device Type"
    value: ["SoC"]
  - name: "MCU"
    value: ["32-bit MCU"]
  - name: "Project Difficulty"
    value: ["Advanced"]
source:
  - path: app.c
  - path: main.c
  - path: spidrv_master_baremetal.c
include:
  - path: .
    file_list:
    - path: app.h
    - path: spidrv_master_baremetal.h
component:
  - id: sl_system
  - id: device_init
  - id: spidrv
    instance: [exp]
  - id: sleeptimer
  - id: iostream_stdlib_config
  - id: iostream_retarget_stdio
  - id: iostream_recommended_stream
define:
  - name: DEBUG_EFM
readme:
  - path: readme.md
configuration:
  - name: SL_BOARD_ENABLE_VCOM
    value: 1
ui_hints:
  highlight: readme.md
