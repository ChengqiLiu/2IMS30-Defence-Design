project_name: rail_soc_light
label: "RAIL - SoC Light"
package: Flex
description: "The purpose of the application is to demonstrate  a simple wireless communication between two or more boards.
In combination with the Switch sample application it creates a basic light functionality, where the light can be toggled in the Light node. After power up, the node is in ADVERTISE state. 
It means broadcast messages are sent periodically. After pushing PB1 button, the node is connected, and ready for toggling the light. This is called the READY state. 
If the Switch module has done the same procedure, light can be toggled from all the boards with pushing BP0 button"
category: RAIL Examples
quality: production

#---------------- UC/UP components -------------------
component:
  - id: sl_system
  - id: device_init
  - id: sl_simple_rail_stub
  - id: rail_util_init
    instance:
      - inst0
  - id: rail_util_recommended
  - id: radio_config_simple_rail_singlephy
  - id: app_log
  - id: app_assert
  - id: simple_button
    instance:
      - btn0
      - btn1
  - id: simple_led
    instance:
      - led0
      - led1
#-------------- Light-Switch Support -----------------
  - id: demo_ui
  - id: sl_light_switch_support
#------------Memory Protection Unit-------------------
  - id: mpu
#---------------------- CLI --------------------------
  - id: cli
    instance:
    - example
  - id: printf
  - id: iostream_recommended_stream
  - id: iostream_retarget_stdio

#-------------- Restriction rules -------------------
  - id: restrictions_profile_base
  - id: restrictions_profile_connect
  - id: restrictions_profile_long_range

#----------------- Require list ----------------------
requires:
  - name: a_radio_config
  - name: sl_simple_rail_os
    condition:
      - "kernel"
# Added for Safety for the EFF, but the sample app doesn't support it yet.
  - name: rail_util_eff
    condition: [hardware_board_has_eff]
  - name: radio_config_singlephy_device_family_fgm23
    condition:
      - "device_family_fgm23"

#----------------- Project files ---------------------
include:
  - path: .
    file_list:
    - path: app_init.h
    - path: app_process.h

source:
  - path: ../common/main/main.c
  - path: app_init.c
  - path: app_process.c
  - path: app_cli.c
    condition:
      - cli

other_file:
  - path: "hw_filter_tags.yaml"
    condition:
      - "add_hw_filter_to_project"

#------------ Configuration overrides ----------------
configuration:
#----------------- OS --------------------------------
  - name: OS_CFG_TMR_EN
    value: "1"
  - name: SL_STACK_SIZE
    value: "4096"
  - name: SL_HEAP_SIZE
    value: "8000"
  - name: OS_CFG_PRIO_MAX
    value: "64"
#------------- FreeRTOS OS        --------------------
