    value: 1
  - name: SL_BOARD_ENABLE_VCOM
    value: 1    
define:
  - name: "DEBUG_EFM"
readme:
  - path: readme.md
ui_hints:
  highlight: readme.md
tag:
  - hardware:component:eth
  - prebuilt_demo