id: "gatt_configuration"
label: "Configuration"
package: "Bluetooth"
description: >
  Adds basic GATT Configuration to the project that can be customized with the GATT Configurator tool.
category: "Bluetooth|GATT"
quality: "production"
root_path: "app/bluetooth/common/gatt_configuration"
config_file:
  - path: "gatt_configuration.btconf"
    file_id: gatt_configuration_file_id
    directory: "btconf"
provides:
  - name: "gatt_configuration"
requires:
  - name: "bluetooth_gattdb_definition"
template_contribution:
  - name: component_catalog
    value: gatt_configuration
